<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ibm.WatBot">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_face"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name="com.example.vmac.WatBot.MainActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.vmac.WatBot.SocialMainActivity" />
        <activity
            android:name="com.example.vmac.WatBot.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.worklight.wlclient.ui.UIActivity" />
        <activity
            android:name="com.example.vmac.WatBot.HomeActivity"
            android:label="@string/title_activity_home" />
        <activity android:name="com.example.vmac.WatBot.SocialAuthActivity" />
        <activity android:name="com.example.vmac.WatBot.Login" />
        <activity android:name="com.example.vmac.WatBot.SimpleTabsActivity"
            android:theme="@style/AppTheme.NoActionBar"
            ></activity>
    </application>

</manifest>